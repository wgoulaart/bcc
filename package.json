{
  "name": "bcc",
  "version": "0.0.1",
  "description": "A CLI to convert Bitcoin to any currency provided.",
  "main": "index.js",
  "scripts": {
    "clear": "rimraf bin",
    "build": "npm run clear && ./node_modules/.bin/babel --out-dir bin src",
    "build:watch": "npm run build -- --watch",
    "lint": "./node_modules/.bin/eslint src/*.js",
    "test": "./node_modules/.bin/mocha tests/**/*.spec.js --require babel-register --reporter nyan",
    "test:tdd": "npm run test -- --watch",
    "test:coverage": "nyc npm test"
  },
  "preferGlobal": true,
  "bin": {
    "bcc": "bin/main.js"
  },
  "nyc": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**"
    ]
  },
  "quokka": {
    "babel": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wgoulart/bcc.git"
  },
  "keywords": [
    "BTC",
    "Bitcoin",
    "Bitcoin Converter"
  ],
  "author": "William Goulart <williamgoulart1@hotmail.com> (http://williamgoulart.com.br/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wgoulart/bcc/issues"
  },
  "homepage": "https://github.com/wgoulart/bcc#readme",
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-preset-env": "^1.3.2",
    "babel-register": "^6.24.0",
    "chai": "^3.5.0",
    "eslint": "^4.0.0",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-import": "^2.6.1",
    "husky": "^0.11.9",
    "mocha": "^3.2.0",
    "nock": "^9.0.13",
    "nyc": "^10.2.0",
    "rimraf": "^2.6.1"
  },
  "dependencies": {
    "chalk": "^2.0.1",
    "commander": "^2.10.0",
    "ora": "^1.3.0",
    "request": "^2.81.0"
  }
}
